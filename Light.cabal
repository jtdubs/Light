-- Initial Light.cabal generated by cabal init.  For further documentation,
--  see http://haskell.org/cabal/users-guide/

name:                Light
version:             0.1.0.0
synopsis:            A Haskell Raytracer
-- description:         
license:             MIT
license-file:        LICENSE
author:              Justin Dubs
maintainer:          jtdubs@gmail.com
category:            Graphics
build-type:          Simple
cabal-version:       >=1.8

library
  build-depends:       base ==4.5.*, lens ==3.9.*, array ==0.4.*
  -- ghc-options:         -Wall -O -fllvm
  ghc-options:         -O -fllvm
  hs-source-dirs:      src
  exposed-modules:     Light.Camera.Camera
                       Light.Camera.Film
                       Light.Camera.OrthographicCamera
                       Light.Camera.PerspectiveCamera
                       Light.Geometry.AABB
                       Light.Geometry.Matrix
                       Light.Geometry.Normal
                       Light.Geometry.Point
                       Light.Geometry.Quaternion
                       Light.Geometry.Ray
                       Light.Geometry.Transform
                       Light.Geometry.Vector
                       Light.Shape.Cone
                       Light.Shape.Cylinder
                       Light.Shape.Disc
                       Light.Shape.Paraboloid
                       Light.Shape.Plane
                       Light.Shape.Shape
                       Light.Shape.Sphere
                       Light.Shape.Triangle
                       Light.Camera
                       Light.Geometry
                       Light.Math
                       Light.Shape

executable Light
  hs-source-dirs:      src
  ghc-options:         -O -fllvm
  main-is:             App\Light.hs
  build-depends:       base ==4.5.*, lens ==3.9.*, array ==0.4.*

executable CameraDiagrams
  hs-source-dirs:      src
  ghc-options:         -O -fllvm
  main-is:             App\CameraDiagrams.hs
  build-depends:       base ==4.5.*, lens ==3.9.*, array ==0.4.*

test-suite Tests
  type:            exitcode-stdio-1.0
  build-depends:   base ==4.5.*, lens ==3.9.*, array ==0.4.*, QuickCheck ==2.5.1.1, test-framework >=0.4.1, test-framework-quickcheck2
  ghc-options:     -O -fllvm
  hs-source-dirs:  src, testsuite
  main-is:         Tests.hs
